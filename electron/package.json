{
  "name": "accessmod",
  "version": "0.0.1",
  "description": "AccessMod electron docker app",
  "main": "index.js",
  "build": {
    "appId": "com.electron.accessmod",
    "productName": "AccessMod",
    "copyright": "Copyright Â© 2021 F.Moser / UNIGE / OMS",
    "mac": {
      "type": "development",
      "category": "public.app-category.education"
    }
  },
  "scripts": {
    "start": "electron-forge start .",
    "package": "electron-forge package .",
    "make": "electron-forge make ."
  },
  "repository": "https://github.com/fxi/AccessMod_shiny",
  "keywords": [
    "accessmod",
    "docker",
    "electron"
  ],
  "author": "Fred Moser",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "^11.2.1"
  },
  "dependencies": {
    "docker-compose": "^0.22.2",
    "dockerode": "^3.2.1",
    "electron-squirrel-startup": "^1.0.0",
    "exit-hook": "^2.2.0",
    "fix-path": "^3.0.0",
    "internet-available": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./app/icons/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "accessmod"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
