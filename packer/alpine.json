{
  "builders": [
    {
      "boot_command": [
        "root<enter><wait>",
        "ifconfig eth0 up && udhcpc -i eth0<enter><wait5>",
        "wget http://{{ .HTTPIP }}:{{ .HTTPPort }}/alpine_setup<enter><wait>",
        "export USEROPTS='-a -u -g audio,video,netdev {{user `ssh_username`}}'<enter>",
        "export USERSSHKEY='http://{{ .HTTPIP }}:{{ .HTTPPort }}/ssh_keys'<enter>",
        "export ROOTSSHKEY='http://{{ .HTTPIP }}:{{ .HTTPPort }}/ssh_keys'<enter>",
        "setup-alpine -f $PWD/alpine_setup<enter><wait5>",
        "{{user `ssh_password`}}<enter><wait>",
        "{{user `ssh_password`}}<enter><wait30>",
        "mount /dev/sda3 /mnt<enter>",
        "echo 'PermitRootLogin yes' >> /mnt/etc/ssh/sshd_config<enter>",
        "umount /mnt; reboot<enter>"
      ],
      "boot_wait": "10s",
      "communicator": "ssh",
      "disk_size": "{{user `disk_size`}}",
      "format": "ova",
      "guest_additions_mode": "disable",
      "guest_os_type": "Linux26_64",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
      "iso_urls": ["{{user `iso_local_url`}}", "{{user `iso_download_url`}}"],
      "keep_registered": "true",
      "shutdown_command": "/sbin/poweroff",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_timeout": "10m",
      "ssh_username": "root",
      "type": "virtualbox-iso",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"],
        ["modifyvm", "{{.Name}}", "--rtcuseutc", "on"],
        ["modifyvm", "{{.Name}}", "--graphicscontroller", "vmsvga"],
        ["modifyvm", "{{.Name}}", "--vram", "6"],
        ["modifyvm", "{{.Name}}", "--vrde", "off"],
        ["modifyvm", "{{.Name}}", "--nic1", "nat"],
        [
          "modifyvm",
          "{{.Name}}",
          "--natpf1",
          "accessmod_app,tcp,0.0.0.0,{{user `port_app_public`}},0.0.0.0,{{user `port_app`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--natpf1",
          "accessmod_http,tcp,0.0.0.0,{{user `port_http_public`}},0.0.0.0,{{user `port_http`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--natpf1",
          "accessmod_ssh,tcp,0.0.0.0,{{user `port_ssh_public`}},0.0.0.0,{{user `port_ssh`}}"
        ],
        ["modifyvm", "{{.Name}}", "--nictype1", "virtio"],
        ["modifyvm", "{{.Name}}", "--nictype2", "virtio"],
        ["modifyvm", "{{.Name}}", "--nictype3", "virtio"],
        ["modifyvm", "{{.Name}}", "--chipset", "ich9"],
        ["modifyvm", "{{.Name}}", "--ioapic", "on"],
        ["modifyvm", "{{.Name}}", "--usb", "off"],
        ["modifyvm", "{{.Name}}", "--usbehci", "off"]
      ],
      "vm_name": "{{user `vm_name`}}-{{user `vm_version`}}"
    }
  ],
  "description": "Build base Alpine Linux x86_64",
  "provisioners": [
    {
      "type": "file",
      "source": "scripts",
      "destination": "/tmp/scripts"
    },
    {
      "type": "shell",
      "script": "scripts/provision.sh",
      "environment_vars": [
        "SSH_USERNAME={{user `ssh_username`}}",
        "SSH_PASSWORD={{user `ssh_password`}}",
        "SSH_KEY={{user `ssh_key`}}",
        "ALPINE_REPOSITORY=http://dl-cdn.alpinelinux.org/alpine/v3.14/community",
        "AM5_PORT_APP={{user `port_app`}}",
        "AM5_PORT_APP_PUBLIC={{user `port_app_public`}}",
        "AM5_PORT_HTTP={{user `port_http`}}",
        "AM5_PORT_HTTP_PUBLIC={{user `port_http_public`}}",
        "AM5_ARCHIVE_DOCKER=/home/accessmod/accessmod-docker.tar.gz",
        "AM5_SCRIPTS_FOLDER=/home/accessmod/scripts",
        "AM5_VERSION_FILE=/home/accessmod/version",
        "AM5_VERSION={{user `version`}}",
        "AM5_REPO={{user `repo`}}",
        "AM5_HUB_API={{user `hub_api`}}",
        "AM5_IMAGE={{user `image`}}"
      ]
    }
  ],
  "variables": {
    "vm_version": "5.8.1",
    "vm_name": "alpine-accessmod",
    "version": "5.8.1",
    "image": "fredmoser/accessmod:5.8.1",
    "repo": "fredmoser/accessmod",
    "cpus": "2",
    "disk_size": "40960",
    "memory": "4096",
    "hub_api": "https://hub.docker.com/v2/",
    "port_app": "3000",
    "port_app_public": "8080",
    "port_http": "5000",
    "port_http_public": "8888",
    "port_ssh": "22",
    "port_ssh_public": "2222",
    "iso_url": "https://dl-cdn.alpinelinux.org/alpine/v3.14/releases/x86_64/alpine-virt-3.14.8-x86_64.iso",
    "iso_checksum": "2f46f2340ba82763e10984a56dd4bd9002f8cd12f45d617bb81a7597d2033250",
    "iso_checksum_type": "sha256",
    "iso_local_url": "iso/alpine-virt-3.14.8-x86_64.iso",
    "root_password": "accessmod",
    "ssh_password": "accessmod",
    "ssh_username": "accessmod"
  }
}
